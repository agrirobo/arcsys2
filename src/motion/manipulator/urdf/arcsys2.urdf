<?xml version="1.0"?>

<robot name="arcsys2">
  <material name="color_g"> <color rgba="0 1 0 1"/> </material>
  <material name="color_b"> <color rgba="0 0 1 1"/> </material>

  <link name="base_link">
    <visual>
      <origin xyz="0.0 0.0 0.5" rpy="0.0 0.0 0.0"/>
      <geometry> <box size="0.3 0.3 1.0"/> </geometry>
      <material name="red"> <color rgba="1 0 0 1"/> </material>
    </visual>
  </link>

  <joint name="fixed_base2shaft" type="fixed">
    <parent link="base_link"/>
    <child link="main_shaft"/>
  </joint>

  <link name="main_shaft">
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0.1"/>
      <geometry> <box size="0.1 0.1 0.2"/> </geometry>
      <material name="red"> <color rgba="1 0 0 1"/> </material>
    </visual>
  </link>

</robot>

